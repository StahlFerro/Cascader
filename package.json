{
  "name": "tridentframe",
  "version": "0.0.1",
  "description": "Desktop GIF, APNG and Spritesheet swiss-army knife",
  "author": "StahlFerro <forgewokseven@gmail.com>",
  "license": "MIT",
  "homepage": "https://stahlferro.github.io/StahlFerro/TridentFrame",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StahlFerro/TridentFrame.git"
  },
  "bugs": {
    "url": "https://github.com/StahlFerro/TridentFrame/issues"
  },
  "main": "main.js",
  "scripts": {
    "clean-dist": "rimraf dist/",
    "clean-cache": "rimraf cache/*",
    "clean-temp": "rimraf temp/*",
    "clean-imgcache": "npm run clean-cache && npm run clean-temp",
    
    "css-build": "node-sass --omit-source-map-url sass/bulmamods.scss css/bulmamods.css",
    "css-watch": "npm run css-build -- --watch",
    "dev": "cross-env DEPLOY_ENV=DEV electron .",
    "prod": "electron .",
    "prodtest": "electron release/html",
    "dist": "npm run wpbuild && npm run prod",

    "liverelease": "npm run clean-dist && webpack --watch",
    "wpserve": "webpack-dev-server --mode development",
    "wpbuild": "npm run clean-dist && webpack --mode production",
    "elbuild": "electron-builder",
    "elforge": "electron-forge make",
    "pybuild": "pyinstaller tripy_linux.spec",

    "elpackage": "electron-packager . tridentframe --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",

    "dpy-linux": "rimraf ./engine/linux/",
    "upy-linux": "npm run dpy-linux && npm run pybuild && rimraf ./release/tridentframe/linux-unpacked/resources/app/engine/ && cp -r ./engine/ ./release/tridentframe/linux-unpacked/resources/app/engine/",
    "release-linux": "npm run clean-imgcache && npm run wpbuild && npm run dpy-linux && npm run pybuild && npm run elbuild",

    "rebuiltron": "./node_modules/.bin/electron-rebuild",
    "megafix": "npm install && npm install zeromq@5.1.0 && npm install electron@6.0.9 && npm install zerorpc && npm rebuild zeromq --runtime=electron && npm run rebuiltron",
    "ultimate-reset": "npm cache clean && rimraf node_modules/ && npm run megafix"
  },
  "build": {
    "productName": "TridentFrame",
    "appId": "com.stahlferro.tridentfarme",
    "directories": {
      "output": "release/tridentframe"
    },
    "asar": false,
    "linux": {
      "target": [
        "deb"
      ],
      "files": [
        "**/*",
        "engine/**",
        "!bin/**",
        "!cache/**",
        "!css/**",
        "!pybrain/**",
        "!sass/**",
        "!temp/**",
        "!venv/**",
        "!vuecore/**",
        "!webfonts/**",
        "!*.py",
        "!*.spec",
        "!*.vue",
        "!webpack.config.js",
        "!*.txt",
        "!*.code-workspace",
        "!*.sh",
        "!*.md"
      ]
    }
  },
  "make_targets": {
    "win32": [
      "squirrel"
    ],
    "darwin": [
      "zip",
      "dmg"
    ],
    "linux": [
      "deb"
    ]
  },
  "dependencies": {
    "file-uri-to-path": "^1.0.0",
    "fstream": "^1.0.12",
    "jsdom": "^15.1.1",
    "tar": "^4.4.10",
    "zeromq": "^5.1.0",
    "zerorpc": "^0.9.8"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "babel-loader": "^8.0.6",
    "bulma": "^0.7.5",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "electron": "^6.0.9",
    "electron-builder": "^22.1.0",
    "electron-rebuild": "^1.8.6",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "make-fetch-happen": "^6.0.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-loader": "^0.6.0",
    "node-sass": "^4.12.0",
    "rimraf": "^3.0.0",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.40.2",
    "webpack-bundle-analyzer": "^3.5.0",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0"
  }
}
